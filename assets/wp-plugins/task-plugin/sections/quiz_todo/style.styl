quiz-todo-style()
	h3
		font-size 22px
		text-align center
		margin 0 0 30px 0

	.intro, .outro_pass, .outro_fail
		text-align center

		.trumbowyg-box
			text-align initial

		h5
			font-size 18px
			padding-top 15px
			text-align center
			border-top 1px solid $color-gris-claro

		label
			display block
			text-align center
			margin-bottom 15px

		.image
			flex-inline()

			img, button
				margin auto

			img
				max-height 130px

		input[type="text"]
			width 20%
			margin-top 15px
			text-align center
