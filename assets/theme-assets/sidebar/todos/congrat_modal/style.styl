congrat-todo-style()
	opacity 1
	width 100%
	height 100%
	z-index 20000
	absolute top 0 left 0
	transition opacity .3s
	background-color $color-gris

	&.out
		opacity 0

	.content
		absolute-center()
		text-align center

		img
			max-width 150px

		h2, h4, button
			margin 15px 0

		h4
			font-weight normal !important

		button
			text-transform uppercase
			background-color $color-verde
