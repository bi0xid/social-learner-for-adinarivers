login-style()
	height 100%
	font-family Lato
	position relative

	.left-form, .right-image
		width 50%
		height 100%

	.left-form
		position relative

		.bottom-banner
			font-size 18px
			text-align center
			color $color-gris-oscuro
			transform translate(-50%, 0)
			absolute bottom 25px left 50%

		.content
			width 100%
			height 400px
			absolute top 50% left 50%
			transform translate(-50%,-50%)

			.login-form, .recover-form
				width 75%
				absolute-center()

			.recover-form
				pointer-events none

				.animated-content
					opacity 0

				.login_fields
					margin-top 16px

					input[type="submit"]
						width 100%
						button-style(#333)

			h2
				font-size 18px

			h2, p
				text-align center
				color $color-gris-oscuro

			.subtitle
				margin-top 5px
				margin-bottom 26px

			.recover-pass, .view-login-form
				width 100%
				color #000
				display block
				text-align center
				text-decoration none

				&:hover
					text-decoration underline

			form
				text-align center

				label
					display none

				input:not(.user-submit)
					width 100%
					height 40px
					box-shadow none
					padding 10px 15px
					background-color #FFF
					border-radius 4px !important
					border 1px solid $color-gris
					margin-bottom 15px !important

					&.error
						border-color $color-todo-done !important

						+placeholder()
							color $color-todo-done

					@media(max-width: 780px)
						border-color #FFF !important

				#user_pass
					margin-bottom 0 !important

				#wp-submit
					width 100%
					height 40px
					margin-top 26px
					button-style($color-verde)

					&:hover
						background-color lightness($color-verde, 40%)

					&:focus
						outline none

			.recover-pass, .view-login-form
				margin-top 26px !important

	.right-image
		background-size cover
		absolute top 0 right 0
		background-repeat norepeat

	@media(max-height 420px)
		h2, .subtitle, .bottom-banner
			display none

	@media(max-width 780px)
		background-color #000

		.left-form, .right-image
			width 100%

		.left-form
			z-index 100
			absolute top 0 left 0

			.bottom-banner
				color #FFF

			.content
				z-index 100

				h2, p, a
					color #FFF !important

		.right-image
			z-index 50
			opacity .6
