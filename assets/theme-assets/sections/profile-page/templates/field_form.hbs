{{#if this.textarea}}
	<div class="text-form" data-id="{{ this.id }}" style="opacity:0;">

		<i class="fa fa-times close-field" aria-hidden="true"></i>
		<i class="fa fa-check save-field" aria-hidden="true"></i>

		<textarea placeholder="{{ this.placeholder }}" name="{{ this.id }}" id="{{ this.id }}" rows="3">{{ this.value }}</textarea>
		<div class="charcounter">
			<span class="c">{{ this.currentLength }}</span> / <span class="t">{{ this.totalLength }}</span>
		</div>
	</div>
{{else}}
	<div class="field-form" data-id="{{ this.id }}" style="opacity:0;">

		<i class="fa fa-times close-field" aria-hidden="true"></i>
		<i class="fa fa-check save-field" aria-hidden="true"></i>

		<input type="text" placeholder="{{ this.placeholder }}" name="{{ this.id }}" id="{{ this.id }}" value="{{ this.value }}" />
	</div>
{{/if}}