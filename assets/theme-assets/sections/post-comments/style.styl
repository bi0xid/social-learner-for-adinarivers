comments-style()
	margin-top 65px
	margin 0 !important
	border-top none !important

	ul.comment, ul.childrens
		padding 0
		list-style none

		li
			margin 0
			padding 0
			min-height 100px
			position relative
			padding-left 100px

			@media(max-width 768px)
				padding-left 80px

			&:not(:last-child)
				margin-bottom 40px

			.avatar
				circle(68)
				background-size cover
				absolute top 0px left 0px
				background-repeat no-repeat

				@media(max-width 768px)
					circle(60)

			.user_name
				font-weight bold

			.comment-body
				padding 15px 0

				p
					margin 0
					font-size 14px
					line-height 1.5
					color $color-gris-oscuro

			.comment-footer
				position relative

				.reply
					color $color-gris-borde
					text-decoration underline

					&:hover
						color #000

				.rating
					absolute top 0 right 0

					.thumbs-rating-container
						padding 0
						thumbs-vote-style($color-gris-borde)

			.childrens
				margin base-sizes(1) 0

	ul.pagination
		margin 0
		padding 0
		flex-vertical()
		list-style none
		margin-top base-sizes(1)

		li
			margin 0 2px
			cursor pointer
			border-radius 20px
			transition all $css-transition-time

			span
				border 0
				color $color-gris-borde

		li.active
			cursor default

		li.active, li:hover
			background-color $color-naranja

			span
				color #FFF

	#pagination-loading
		transform translate(-50%,0)
		absolute bottom 35px left 50%
		transition opacity $css-transition-time

		&.out
			opacity 0

		.fa
			font-size 20px
			color $color-gris-oscuro

comment-form-style()
	margin-top 0
	margin-bottom 24px

	#comment_text
		width 100%
		resize none
		display block
		height base-sizes(3)
		background-color #FFF
		margin-bottom base-sizes()
		border 2px solid $color-gris-borde

	#form-loading
		margin-left 10px
		display inline-block
		transition opacity $css-transition-time

		&.out
			opacity 0

		.fa
			font-size 20px
			color $color-gris-oscuro

	#submit_comment
		width 77px
		padding 5px
		float initial
		display inline-block
		background-color $color-verde

	.form-footer
		float right
		display none

		@media(max-width 580px)
			float none
			width 100%
			margin-top base-sizes()

		.reply-to, .cancel-reply
			margin 0
			font-size 18px
			display inline-block
			color $color-gris-oscuro

		.cancel-reply
			cursor pointer
			text-decoration underline

new-comment-label-style()
	cursor pointer
	flex-vertical()
	text-align center
	margin base-sizes() 0

	&.out
		opacity 0
		pointer-events none

	.fa
		margin 0 15px
		font-size 24px
		transition margin $css-transition-time

	span
		font-size 18px

	span, .fa
		color $color-gris-oscuro

	&:hover
		.fa
			margin 0 20px
